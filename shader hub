local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/0x"))()
local w1 = library:Window("Shader Hub") -- Updated window title

-- Day/Night Controls
w1:Button(
    "Set to Day",
    function()
        game.Lighting.ClockTime = 12
        print("Set to Day")
    end
) -- Button to set daytime

w1:Button(
    "Set to Night",
    function()
        game.Lighting.ClockTime = 0
        print("Set to Night")
    end
) -- Button to set nighttime

local cycleEnabled = false
local cycleConnection
w1:Toggle(
    "Day/Night Cycle",
    "cycle",
    false,
    function(toggled)
        cycleEnabled = toggled
        if toggled then
            cycleConnection = game:GetService("RunService").Heartbeat:Connect(function(delta)
                game.Lighting.ClockTime = (game.Lighting.ClockTime + delta * 0.5) % 24  -- Adjust speed with multiplier
            end)
        else
            if cycleConnection then
                cycleConnection:Disconnect()
                cycleConnection = nil
            end
        end
    end
) -- Toggle for automatic day/night cycle

-- Other Shader/Effect Controls
w1:Slider(
    "Brightness",
    "bright",
    0,
    5,
    function(value)
        game.Lighting.Brightness = value
    end,
    game.Lighting.Brightness  -- Default to current value
) -- Slider for lighting brightness

w1:Slider(
    "Fog End",
    "fogend",
    100,
    10000,
    function(value)
        game.Lighting.FogEnd = value
    end,
    game.Lighting.FogEnd  -- Default to current value
) -- Slider for fog distance

local bloomInstance
w1:Toggle(
    "Bloom Effect",
    "bloom",
    false,
    function(toggled)
        if toggled then
            if not bloomInstance then
                bloomInstance = Instance.new("BloomEffect")
                bloomInstance.Intensity = 1
                bloomInstance.Threshold = 0.8
                bloomInstance.Size = 24
                bloomInstance.Parent = game.Lighting
            end
        else
            if bloomInstance then
                bloomInstance:Destroy()
                bloomInstance = nil
            end
        end
    end
) -- Toggle for bloom post-processing effect

local ccInstance
w1:Toggle(
    "Color Correction",
    "cc",
    false,
    function(toggled)
        if toggled then
            if not ccInstance then
                ccInstance = Instance.new("ColorCorrectionEffect")
                ccInstance.Brightness = 0.1
                ccInstance.Contrast = 0.2
                ccInstance.Saturation = 0.3
                ccInstance.TintColor = Color3.fromRGB(255, 200, 200)  -- Example tint
                ccInstance.Parent = game.Lighting
            end
        else
            if ccInstance then
                ccInstance:Destroy()
                ccInstance = nil
            end
        end
    end
) -- Toggle for color correction effect

-- Original Destroy GUI Button
w1:Button(
    "Destroy GUI",
    function()
        for i, v in pairs(game.CoreGui:GetChildren()) do
            if v:FindFirstChild("Top") then
                v:Destroy()
            end
        end
    end
) -- Text, Callback

w1:Label("r y u s a i--Shader Hub") -- Updated label
